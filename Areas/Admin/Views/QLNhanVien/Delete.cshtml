﻿@model NhaKhoa.Models.AspNetUser

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h3 class="text-center">Bạn có chắc chắn muốn xóa người dùng này không?</h3>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PhoneNumber):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserName):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.GioiTinh):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GioiTinh)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DiaChi):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Trangthai):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Trangthai)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ngaysinh):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Ngaysinh)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NgheNghiep):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgheNghiep)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NgayTao):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Bangcap):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Bangcap)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CCCD):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CCCD)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName):</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="text-center mt-3">
                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>