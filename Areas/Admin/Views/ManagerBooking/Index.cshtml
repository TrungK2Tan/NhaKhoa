@model IEnumerable<NhaKhoa.Models.PhieuDatLich>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Trang Quản Lý Lịch Khám Của Nha Sĩ</h2>
<div class="payment-buttons">
    <a class="btn btn-success" href="@Url.Action("Index", "ManagerBooking")" data-filter="da-xac-nhan">Đã xác nhận</a>
    <a class="btn btn-danger" href="@Url.Action("Index", "ManagerBooking")" data-filter="chua-xac-nhan">Chưa xác nhận</a>
    <a class="btn btn-primary" id="btnXemTatCa">Xem tất cả</a>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên Khách Hàng</th>
                <th>Số Điện Thoại</th>
                <th>Ngày Đặt</th>
                <th>Email</th>
                <th>Tên Nha Sĩ</th>
                <th>Trạng Thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-status="@((item.TrangThai == true) ? "da-xac-nhan" : "chua-xac-nhan")">
                    <td>@Html.DisplayFor(modelItem => item.AspNetUser.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AspNetUser.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayKham)</td>
                    <td>@Html.DisplayFor(modelItem => item.AspNetUser.Email)</td>
                    <!--chua lay duoc ten nha si ra trang admin -->
                    <td>@Html.DisplayFor(modelItem => item.AspNetUser.FullName)</td>
                    <td>
                        @if (item.TrangThai == true)
                        {
                            <button class="btn btn-sm btn-primary btn-approve" data-id="@item.Id_Phieudat" disabled>Đã xác nhận</button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-primary btn-approve" data-id="@item.Id_Phieudat">Chưa xác nhận</button>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-danger" href="~/NhaSi/ManagerBooking/Delete?id=@item.Id_Phieudat">Xóa</a>
                        <a class="btn btn-sm btn-primary" href="~/NhaSi/ManagerBooking/Details?id=@item.Id_Phieudat">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Lọc lịch theo trạng thái
    $('.payment-buttons a').click(function (e) {
        e.preventDefault();

        // Lấy giá trị của thuộc tính data-filter
        var filter = $(this).data('filter');

        // Ẩn tất cả các hàng trong bảng
        $('tbody tr').hide();

        // Hiển thị các hàng có trạng thái tương ứng với filter
        $('tbody tr[data-status="' + filter + '"]').show();
    });

    // Xem tất cả
    $('#btnXemTatCa').click(function (e) {
        e.preventDefault();
        $('tbody tr').show();
    });
</script>
<script>
    $(document).ready(function () {
        $(".btn-approve").on("click", function () {
            var button = $(this);
            var id = button.data("id");
            $.ajax({
                url: "@Url.Action("Approve", "ManagerBooking")",
                type: "POST",
                data: { id: id },
                success: function () {
                    alert("Bạn đã xác nhận thành công.");
                    $("#status-" + id).text("Đã xác nhận");
                    button.attr("disabled", true);
                },
                error: function () {
                    alert("Có lỗi xảy ra. Vui lòng thử lại sau.");
                }
            });
        });
    });
</script>