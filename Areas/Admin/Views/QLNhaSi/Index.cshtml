﻿@model IEnumerable<NhaKhoa.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2 class="text-center">Quản lí tài khoản Nha sĩ</h2>

<p>
    <button class="btn btn-primary btn-create-new" onclick="location.href='@Url.Action("Create")'">Tạo nha sĩ mới</button>
</p>

<p>
    <button class="btn btn-success btn-tkb" onclick="location.href='@Url.Action("TKB")'">Lịch làm việc Nha sĩ</button>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Tên Nha sĩ
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Tên người dùng
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            CCCD
        </th>
        <th>
            Hình ảnh
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @if (item.GioiTinh == true)
                {
                    <span class="text-success">Nam</span>
                }
                else
                {
                    <span class="text-danger">Nữ</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            <td>
                <img src="~/img/Nhaisiimg/@item.HinhAnh" alt="Alternate Text" />
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>