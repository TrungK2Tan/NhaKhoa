@model NhaKhoa.Models.AspNetUser

@{
    ViewBag.Title = "DetailsDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-5">
            <div class="mb-5">
                <img class="img-fluid rounded" src="~/img/Nhaisiimg/@Model.HinhAnh" style="max-width: 400px" alt="">
            </div>
        </div>
        <div class="col-lg-7">
            <div class="mb-5">
                <h1 class="display-4 mb-4">@Html.DisplayFor(model => model.FullName)</h1>
                <p class="lead">@Html.DisplayFor(model => model.Ngaysinh)</p>
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-primary border-bottom border-5">Thời gian làm việc:</h2>
                        @*<p class="text-primary" style="font-size: 20px">@Html.DisplayFor(model => model.ThoiKhoaBieux) - @Html.DisplayFor(model => model.GioKetThuc)</p>*@
                    </div>
                    <div class="col-md-6">
                        <a class="btn btn-primary btn-lg w-100 py-2" href="@Url.Action("Appointment", "Home", new {@IDBACSI = Model.Id})">Đặt Lịch</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

