@model IEnumerable<NhaKhoa.Models.PhieuDatLich>
@{
    ViewBag.Title = "BookingView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h2 class="text-center mt-5">Lịch Đã Đặt</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    @if (Model.Any(item => item.TrangThaiThanhToan == true)) // Kiểm tra nếu có ít nhất một phần tử có TrangThai=true
                    {
                        <th>Số thứ tự</th>
                    }
else { <th></th>}
                    <th>Tên bệnh nhân</th>
                    <th>Số Điện Thoại</th>
                    <th>Ngày Khám</th>
                    <th>Email</th>
                    <th>Tên Nha Sĩ</th>
                    <th>Thanh toán</th>
                    <th>Trạng thái</th>
                    <th> Tái khám</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (item.TrangThaiThanhToan == true)
                        {
                            <td>@Html.DisplayFor(modelItem => item.STT)-@Html.DisplayFor(modelItem => item.ThoiKhoaBieu.KhungGio.TenCa)</td>
                        }
                        else
                        {
                            <td></td>
                        }
                        <td>@ViewBag.tennguoidung</td>
                        <td>@Html.DisplayFor(modelItem => item.AspNetUser.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.NgayKham)</td>

                        <td>@Html.DisplayFor(modelItem => item.AspNetUser.Email)  </td>
                        <!--chua lay duoc ten nha si ra trang nguoi dung-->
                        <td>@item.IdNhaSi- @Html.DisplayFor(modelItem => item.ThoiKhoaBieu.Phong.TenPhong)</td>
                        <td>
                            @if (item.TrangThaiThanhToan == true)
                            {<span class="text-success"> Đã thanh toán</span>
                            }
                            else
                            {
                                <span class="text-warning">Chưa thanh toán</span>
                            }
                        </td>
                        <td>
                            @if (item.TrangThai == true)
                            {
                                <span class="text-success">Đã khám</span>
                            <td>
                                <a href="@Url.Action("Appointment", "Home", new { ten = item.AspNetUser.FullName, sdt = item.AspNetUser.PhoneNumber, tennhasi = item.AspNetUser.FullName, @IDBACSI = item.IdNhaSi })" class="btn btn-primary">ĐẶT LẠI</a>
                            </td>
                        }
                        else
                        {
                            <span class="text-danger">Chưa khám</span>
                            <button class="btn btn-primary" onclick="cancelBooking('@item.Id_Phieudat')">
                                Hủy đặt lịch
                            </button>

                        }
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>
<script>
    function cancelBooking(bookingId) {
        if (confirm('Bạn có chắc chắn muốn hủy đặt lịch này?')) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("CancelBooking", "Home")',
                data: { bookingId: bookingId },
                success: function (result) {
                    if (result.success) {
                        alert('Hủy đặt lịch thành công.');
                        location.reload();
                    } else {
                        alert('Không thể hủy đặt lịch.');
                    }
                },
                error: function () {
                    alert('Đã xảy ra lỗi.');
                }
            });
        }
    }
</script>
