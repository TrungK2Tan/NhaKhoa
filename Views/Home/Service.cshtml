@model PagedList.IPagedList<NhaKhoa.Models.DichVu>
    @using PagedList.Mvc;
@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a href="#">Trang chủ</a> / Dịch vụ</span>
                <h3>Dịch vụ</h3>
            </div>
        </div>
    </div>
</div>

<div class="section properties">
    <div class="container">
        <ul class="properties-filter">
            <li>
                <a class="is_active" href="#!" data-filter="*">Tất cả dịch vụ</a>
            </li>
        </ul>
        <div class="row properties-box">
            @foreach (var service in Model)
            {
                <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
                    <div class="item">
                        <a href="property-details.html"><img src="~/assets/images/Dich-vu/@service.HinhAnh" alt=""></a>
                        <span class="category">Dịch vụ</span>
                        <h4><a href="property-details.html">@service.Tendichvu</a></h4>
                        <ul>
                            <li>@service.Mota</li>
                        </ul>
                        <div class="main-button">
                            @Html.ActionLink("Tìm hiểu ngay", "ServiceDetail", "Home", new { id = service.Id_dichvu }, new { @class = "btn btn-info btn-sm" })
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center mt-4">
            <ul class="pagination">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    @if (Model.HasPreviousPage)
                    {
                        <a class="page-link" href="@Url.Action("Service", new { page = Model.PageNumber - 1 })">&laquo; </a>
                    }
                </li>

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Service", new { page = i })">@i</a>
                    </li>
                }

                <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                    @if (Model.HasNextPage)
                    {
                        <a class="page-link" href="@Url.Action("Service", new { page = Model.PageNumber + 1 })"> &raquo;</a>
                    }
                </li>
            </ul>
        </div>
    </div>
</div>
